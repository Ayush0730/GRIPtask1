<%- include('./partials/header') %>
<h1 class="d-flex justify-content-center mt-5 pt-5">Create New User</h1>

<div class="container w-50">
    <form action="/new" method="post">
        <div class="mb-3">
            <h4>Name</h4>
            <input class="form-control" type="text" name="name" required>
        </div>
        <div class="mb-3">
            <h4>Email</h4>
            <input class="form-control" type="email" name="email" required>   
        </div>
        <div class="mb-3">
            <h4>Balance</h4>
            <input class="form-control" type="number" name="balance" required>
        </div>
        <div class="d-flex justify-content-evenly">
            <input type="submit" value="Submit" class="btn btn-outline-success w-25">
            <input type="reset" value="Reset" class="btn btn-outline-danger w-25">
        </div>
    </form>
</div>

<%- include('./partials/footer') %>