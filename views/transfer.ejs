<%- include('./partials/header') %>
<h1 class="d-flex justify-content-center">Transfer Money</h1>

<table class="table table-striped table-bordered table-info w-50 mx-auto">
    <thead>
        <td>Name</td>
        <td>Email</td>
        <td>Balance</td>
    </thead>
    <tbody>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.balance %></td>
        </tr>
    </tbody>
</table>

<div class="container w-50">
    <form name="transferForm" action="/customers/<%= user.name %>/transfer" method="POST">
        <div class="mb-3">
            <h5>Transfer To:</h5>
            <select class="form-select" name="reciever" id="" required>
                <option value=""></option>
                <% allUsers.forEach(function(user1){ %>
                    <% if(user1.email != user.email){ %>
                        <option value="<%= user1.name %>"><%= user1.name %> (<%= user1.balance %>)</option>
                    <% } %>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <h5>Amount</h5>
            <input class="form-control" type="number" name="amount" required >
        </div>
        <div class="d-flex justify-content-evenly">
            <input type="submit" value="Transfer" class="btn btn-outline-success w-25">
            <input type="reset" value="Reset" class="btn btn-outline-danger w-25">
        </div>
    </form>    
</div>

<%- include('./partials/footer') %>